[init]
  templatedir = ~/.git_template
[user]
  name = Anikin Artyom
  email = anikinartyom@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new = green
  old = red
  commit = yellow
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "status"]
  added = green
  changed = blue
  deleted = red
  untracked = magenta
[gc]
  auto = 1
[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  di = diff --word-diff --color-words
  dc = diff --cached --word-diff --color-words
  ds = diff --staged --word-diff --color-words
  aa = add --all
  pom = push origin master
  b = branch
  pd  = push origin dev
  pld = pull origin dev
  pm  = push origin master
  plm = pull origin master
  browse = !hub browse

  amend = commit --amend                                                        # change last commit message
  car = commit --amend --no-edit                                                # change last commit files
  new = checkout -b
  changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status
  h1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
  h2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
  log = log --graph --date=short

  unstage = reset                                                               # un-add files from index (tracking)
  uncommit = reset --soft HEAD^                                                 # go back one commit, put changes into your working dir and index
  sla = log --oneline --decorate --graph --all

  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"

# [format]
#   pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[core]
  editor = nvim
	excludesfile = /Users/artyomanikin/.gitignore_global
  pager = diff-so-fancy | less --tabs=4 -RFX
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[push]
  default = simple
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[gitsh "color"]
  default = cyan
[gitsh]
  defaultcommand = status -sb
  gitcommand = hub
  nogreeting = true
  prompt = "\n%D %c(%b%#)%w âžœ"
[github]
  user = artanikin
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = vimdiff
