[init]
  #  templatedir = ~/.git_template
[user]
  name = Anikin Artyom
  email = anikinartyom@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
    frag = magenta bold
    meta = 11
    new = green bold
    old = red bold
    commit = yellow bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "status"]
  added = green
  changed = blue
  deleted = red
  untracked = magenta
[gc]
  auto = 1
[alias]
  st = status
  cm = commit
  co = checkout
  br = branch
  di = diff
  dc = diff --cached
  ds = diff --staged
  aa = add --all
  b = branch
  pd  = push origin dev
  pld = pull origin dev
  pm  = push origin master
  plm = pull origin master
  browse = !hub browse
  ph = push origin HEAD
  phf = push origin HEAD --force

  amend = commit --amend                                                        # change last commit message
  car = commit --amend --no-edit                                                # change last commit files
  new = checkout -b
  changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status
  h1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
  h2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
  log = log --graph --date=short

  unstage = reset                                                               # un-add files from index (tracking)
  uncommit = reset --soft HEAD^                                                 # go back one commit, put changes into your working dir and index
  sla = log --oneline --decorate --graph --all

  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"

# [format]
#   pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[core]
  editor = nvim
  excludesfile = $HOME/.gitignore_global
  pager = delta --dark
	attributesfile = $HOME/.gitattributes
[interactive]
  diffFilter = delta --color-only
[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse
  syntax-theme = gruvbox-dark
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[push]
  default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
  required = true
	process = git-lfs filter-process
[gitsh "color"]
  default = cyan
[gitsh]
  defaultcommand = status -sb
  gitcommand = hub
  nogreeting = true
  prompt = "\n%D %c(%b%#)%w âžœ"
[github]
  user = artanikin
[merge]
  tool = vimdiff
  ; conflictstyle = diff3
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[diff "rspec"]
        xfuncname = "^[ \t]*((RSpec|describe|context|it|before|after|around|feature|scenario|background)[ \t].*)$"
[diff "swift"]
    xfuncname = ^[ \t]*((class|func)[ \t].*)$
