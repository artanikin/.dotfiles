{
  "solargraph.checkGemVersion": false,
  "solargraph.promptDownload": true,
  "solargraph.completion": true,
  "solargraph.definitions": true,
  "solargraph.diagnostics": true,
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.hover": true,
  "solargraph.rename": true,
  "solargraph.symbols": true,
  "solargraph.folding": true,

  "git.enableGlobalStatus": true,
  "git.enableGutters": true,
  "git.addedSign.text": "▌",
  "git.addedSign.hlGroup": "GutterAdd",
  "git.changedSign.text": "▌",
  "git.changedSign.hlGroup": "GutterChange",
  "git.topRemovedSign.text": "▔",
  "git.topRemovedSign.hlGroup": "GutterDelete",
  "git.removedSign.text": "▁",
  "git.removedSign.hlGroup": "GutterDelete",
  "git.changeRemovedSign.text": "▌",
  "git.changeRemovedSign.hlGroup": "GutterDelete",

  "markdownlint.config": {
    "default": true,
    "line-length": false
  },

  "snippets.ultisnips.directories":
  [
    "UltiSnips",
    "~/.config/nvim/utils/snips"
  ]
}
